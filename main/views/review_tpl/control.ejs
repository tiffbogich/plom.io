<ul class="nav nav-tabs" id="controlTab">
  <li class="active">
    <a href="#ctr-methods" data-toggle="tab">Methods</a>
  </li>
  <li>
    <a href="#ctr-theta" data-toggle="tab">Theta</a>
  </li>
</ul>

<div class="tab-content">

  <!-- Methods -->
  <div class="tab-pane active" id="ctr-methods">

    <form class="form-horizontal">

      <div class="control-group">
        <label class="control-label" for="algo">Method</label>
        <div class="controls">
          <select id="algo">
            <option value="simul">Simulation</option>
            <option value="smc">Sequential Monte Carlo</option>
            <option value="kalman">Extended Kalman Filter</option>
          </select>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="impl">Implementation</label>
        <div class="controls">
          <select id="impl">
            <option value="ode">Ordinary differential equation</option>
            <option value="sde">Stochastic differential equation</option>
            <option value="psr">Poisson process</option>
          </select>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <label class="checkbox">
            <input type="checkbox" name="no_dem_sto" value="no_dem_sto"> discard demographic stochasticity
          </label>
          <label class="checkbox">
            <input type="checkbox" id="no_env_sto" value="no_env_sto"> discard environmental stochasticity
          </label>
          <label class="checkbox">
            <input type="checkbox" id="no_drift" value="no_drift"> discard drift
          </label>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="J">Number of particles/ realisations</label>
        <div class="controls">
          <input type="text" id="J" class="input-small">
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="s">Integration time step</label>
        <div class="controls">
          <input type="text" id="s" class="input-small"> <span>unit</span>
        </div>
      </div>

    </form>

  </div>

  <!-- Parameters -->
  <div class="tab-pane" id="ctr-theta">
    <div id="slider" class="hidden"></div>

    <table>
      <tr>
        <th></th>
        <th>min</th>
        <th>value</th>
        <th>max</th>
        <% if(t.status !== 'best'){ %>
        <th>diff</th>
        <% } %>
      </tr>

      <% p.parameter.concat(p.state, l.parameter).forEach(function(par){ %>
      <% if (par.id in t.value) { %>
      <% for(var group in t.value[par.id].guess){ %>
      <tr>
        <td><%= par.id %>: <%= group.split('__').join('; ') %></td>
        <td><input type="text" name="<%= par.id %>___<%= group %>___min"   value="<%= t.value[par.id]['min'][group] %>"   class="input-mini theta" /></td>
        <td><input type="text" name="<%= par.id %>___<%= group %>___guess" value="<%= t.value[par.id]['guess'][group] %>" class="input-mini theta guess" /></td>
        <td><input type="text" name="<%= par.id %>___<%= group %>___max"   value="<%= t.value[par.id]['max'][group] %>"   class="input-mini theta" /></td>

        <% if(t.status !== 'best'){ %>
        <td> <i class="icon-arrow-down"></td>
        <% } %>

      </tr>
      <% } }; });  %>
    </table>
  </div>
</div>

